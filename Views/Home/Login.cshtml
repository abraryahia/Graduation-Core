@using Graduation_Core.Models
@{
    UserViewModel user = new UserViewModel();
}

    @using (Html.BeginForm())
    {
         
    <div >
         @Html.HiddenFor(m => user.ID)
        <div class="form-group  col-lg-6 col-sm-12">
            <label for="@user.Name">User Name</label>
            <input id="@user.Name" class="form-control" placeholder="username" type="text" name="name">
        </div>
        <div class="form-group col-lg-6 col-sm-12">
            <label for="@user.Password">Password</label>
            <input id="@user.Password" class="form-control" placeholder="Password" type="password" name="password">
        </div>
        <input type="submit" class="btn btn-success col-lg-6 col-sm-12" value="Login" />
    </div>
    }
