@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="mx-auto col-lg-4 col-md-6 col-sm-12">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (ViewBag.error != null)
        {
            <div class="text-danger">@ViewBag.error</div>
        }
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group h">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mobile"></label>
            <input asp-for="Mobile" class="form-control" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddressDetails"></label>
            <input asp-for="AddressDetails" class="form-control" />
            <span asp-validation-for="AddressDetails" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SSN"></label>
            <input asp-for="SSN" class="form-control" />
            <span asp-validation-for="SSN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Select City</label>
            <select asp-for="C_ID" class="form-control" id="eCity" asp-items="@ViewBag.cities"></select>
            <span asp-validation-for="C_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Select Location  </label>
            <select asp-for="LocationID" class="form-control" id="eCity" asp-items="@ViewBag.locs"></select>
            <span asp-validation-for="LocationID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
        <a asp-action="login" class="btn btn-secondary text-white btn-block">Login Instead</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
